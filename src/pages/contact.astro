---
import Layout from "../layouts/Layout.astro";
import Section from "../components/ui/Section.astro";
import Button from "../components/ui/Button.astro";
import { Image } from "astro:assets";
import showroomImage from "../assets/images/showroom-tiel.webp";
---

<Layout title="Contact | By Shakir">
    <div
        class="min-h-screen pt-24 md:pt-32 pb-12 px-6 md:px-12 grid grid-cols-1 md:grid-cols-12 max-w-[1920px] mx-auto gap-12 md:gap-x-24"
    >
        <!-- Left Column (Unified Header + Info) -->
        <div
            class="contents md:block md:col-span-4 md:sticky md:top-32 md:h-fit md:space-y-16"
        >
            <!-- Header Section -->
            <div class="order-1 flex flex-col justify-start mb-12 md:mb-0">
                <p
                    class="text-brand-gold text-sm font-bold uppercase tracking-widest mb-6"
                >
                    Get in Touch
                </p>
                <h1
                    class="text-5xl md:text-7xl font-heading text-brand-text mb-6 md:mb-12"
                >
                    Let's Discuss <br />
                    <span class="italic text-brand-gold">Your Vision</span>
                </h1>
            </div>

            <!-- Info Section -->
            <div class="order-3 space-y-12 md:space-y-16">
                <div>
                    <h3 class="text-xl font-heading text-white mb-4">
                        The Netherlands (HQ)
                    </h3>
                    <p class="text-brand-text/60 leading-loose">
                        Gijsbert Stoutweg 8<br />
                        4005 LE Tiel<br />
                        The Netherlands
                    </p>
                </div>

                <div>
                    <h3 class="text-xl font-heading text-white mb-4">
                        Morocco
                    </h3>
                    <p class="text-brand-text/60 leading-loose">
                        Tanger<br />
                        <span class="text-brand-gold italic">Coming Soon</span>
                    </p>
                </div>

                <div>
                    <h3 class="text-xl font-heading text-white mb-4">
                        Contact
                    </h3>
                    <p class="text-brand-text/60 leading-loose">
                        <a
                            href="mailto:info@byshakir.nl"
                            class="hover:text-brand-gold transition-colors"
                            >info@byshakir.nl</a
                        ><br />
                        <a
                            href="tel:+31344655473"
                            class="hover:text-brand-gold transition-colors"
                            >+31 (0)344 655 473</a
                        ><br />
                        <a
                            href="https://wa.me/31618658059"
                            class="hover:text-brand-gold transition-colors"
                            >WhatsApp</a
                        >
                    </p>
                </div>

                <div class="pt-8 border-t border-brand-text/10">
                    <p
                        class="text-xs uppercase tracking-widest text-brand-text/40 mb-6"
                    >
                        By Appointment Only
                    </p>
                    <div
                        class="relative group overflow-hidden border border-brand-text/10 transition-all duration-700"
                    >
                        <Image
                            src={showroomImage}
                            alt="By Shakir luxury interior design showroom in Tiel, Netherlands - by appointment only"
                            width={800}
                            height={600}
                            loading="lazy"
                            decoding="async"
                            class="w-full h-auto hover:scale-105 transition-transform duration-700"
                        />
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column (Form) -->
        <div
            id="contact-form"
            class="order-2 md:order-none md:col-span-8 md:pl-12 md:border-l md:border-brand-text/10 scroll-mt-32"
        >
            <form class="space-y-12">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
                    <div class="space-y-4">
                        <label
                            for="name"
                            class="text-xs font-bold uppercase tracking-widest text-brand-gold"
                            >Full Name</label
                        >
                        <input
                            type="text"
                            id="name"
                            class="w-full bg-transparent border-b border-brand-text/20 focus:border-brand-gold outline-none py-4 text-brand-text transition-colors placeholder:text-brand-text/20 text-lg"
                            placeholder="Your Name"
                        />
                    </div>
                    <div class="space-y-4">
                        <label
                            for="email"
                            class="text-xs font-bold uppercase tracking-widest text-brand-gold"
                            >Email Address</label
                        >
                        <input
                            type="email"
                            id="email"
                            class="w-full bg-transparent border-b border-brand-text/20 focus:border-brand-gold outline-none py-4 text-brand-text transition-colors placeholder:text-brand-text/20 text-lg"
                            placeholder="Your Email"
                        />
                    </div>
                </div>

                <div class="space-y-4">
                    <label
                        for="phone"
                        class="text-xs font-bold uppercase tracking-widest text-brand-gold"
                        >Phone Number</label
                    >
                    <input
                        type="tel"
                        id="phone"
                        class="w-full bg-transparent border-b border-brand-text/20 focus:border-brand-gold outline-none py-4 text-brand-text transition-colors placeholder:text-brand-text/20 text-lg"
                        placeholder="Your Phone Number"
                    />
                </div>

                <div class="space-y-4">
                    <label
                        for="message"
                        class="text-xs font-bold uppercase tracking-widest text-brand-gold"
                        >Your Vision</label
                    >
                    <textarea
                        id="message"
                        rows="6"
                        class="w-full bg-transparent border-b border-brand-text/20 focus:border-brand-gold outline-none py-4 text-brand-text transition-colors placeholder:text-brand-text/20 text-lg resize-none"
                        placeholder="Tell us about your project..."></textarea>
                </div>

                <div class="pt-8 flex justify-end">
                    <Button
                        type="submit"
                        variant="solid"
                        class="w-full md:w-auto">Send Inquiry</Button
                    >
                </div>
            </form>
        </div>
    </div>
</Layout>
